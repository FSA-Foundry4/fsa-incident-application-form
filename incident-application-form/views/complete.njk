{% extends "layout.njk" %}

{% set mainClasses = "govuk-main-wrapper--l" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageTitle %}
{{ i18n.pageTitle[i18n.languageCode] }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    {{ govukPanel({
      titleText: i18n.text.reportComplete[i18n.languageCode],
      html: "%1<br><strong>%2</strong>" | replace("%1", i18n.text.yourReferenceNumber[i18n.languageCode]) | replace("%2", referenceNumber),
      attributes : {
        "data-cy": "reference-number"
      }
    }) }}

    <h3 class="govuk-heading-m">{{ i18n.sections.whatHappensNext[i18n.languageCode] }}</h3>

    <p class="govuk-body">
      {{ i18n.text.whatHappensNext[i18n.languageCode] }}
    </p>

  </div>
</div>

{% endblock %}